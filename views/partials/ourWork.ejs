<div class="row mb-3">
  <section class="col-12" id="ourWork">
    <div class="text-center mx-auto pt-5 mt-2 mb-5">
      <h1><%= headings[0].ourWorkHeading %></h1>
      <p><%= siteInformation[0].ourWorkInformation %></p>
    </div>
    <div class="card-deck">

      <%for (ourWork of ourwork){%>
    <div class="card col-12 col-lg-4 border-0">
      <a href="../images/<%=ourWork.images%>" data-toggle="lightbox"><img class="card-img-top" src="../images/<%=ourWork.images%>" alt="Card image cap"></a>
      <div class="card-body">
        <p class="card-text"><%=ourWork.description%></p>
      </div>
    </div>
  <%}%>
  </div>
  </section>
</div>
